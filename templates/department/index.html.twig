{% extends 'base.html.twig' %}

{% block title %}Chiffre COVID-19 | {{ data.LiveDataByDepartement.0.nom }}{% endblock %}

{% block body %}
    <div class="text-center my-5">
        <h1>Les chiffres du COVID-19 - {{ data.LiveDataByDepartement.0.nom }}</h1>
        <p>Source : {{ data.LiveDataByDepartement.0.source.nom }}</p>
        <p>Date d'actualisation : {{ data.LiveDataByDepartement.0.date|format_date('long') }}</p>
    </div>

    <div class="card mb-5 shadow-lg">
		<div class="card-body">
			{{ render_chart(chart) }}
		</div>
	</div>

    <div class="d-flex flex-row flex-wrap">
        <div class="card">
            <div class="card-header">
                Nombre d'hospitalisations
            </div>
            <div class="card-body">
                {{ data.LiveDataByDepartement.0.hospitalises}}
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                Nombre de personnes en r√©a
            </div>
            <div class="card-body">
                {{ data.LiveDataByDepartement.0.reanimation}}
            </div>
        </div>
    </div>
{% endblock %}
